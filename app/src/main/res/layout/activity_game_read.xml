<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_time"
        android:id="@+id/textView7"
        android:textSize="25sp" />

    <Chronometer
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer2"
        android:visibility="visible"
        android:width="15dp"
        android:textSize="50sp"
        android:gravity="center"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:rowCount="4"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_marginTop="30dp" >

        <Button
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:id="@+id/btnTextRed"
            android:layout_row="1"
            android:layout_column="1"
            android:textColor="@color/flat_red"
            android:text="@string/color_red"
            android:textSize="25sp"
            android:backgroundTint="@color/btn_default" />

        <Button
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:id="@+id/btnTextYellow"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="25sp"
            android:text="Amarelo"
            android:textColor="@color/flat_yellow"
            android:backgroundTint="@color/btn_default" />

        <Button
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:id="@+id/btnTextBlue"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="25sp"
            android:text="Azul"
            android:textColor="@color/flat_blue"
            android:backgroundTint="@color/btn_default" />

        <Button
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:id="@+id/btnTextGreen"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="25sp"
            android:text="Verde"
            android:textColor="@color/flat_green"
            android:backgroundTint="@color/btn_default" />

        <Button
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:id="@+id/btnTextPurple"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="25sp"
            android:text="Roxo"
            android:textColor="@color/flat_purple"
            android:backgroundTint="@color/btn_default" />

        <Button
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:id="@+id/btnTextPink"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="25sp"
            android:text="Rosa"
            android:textColor="@color/flat_pink"
            android:backgroundTint="@color/btn_default" />
    </GridLayout>


</LinearLayout>